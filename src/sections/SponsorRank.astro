---
import GoldSponsor from "../components/GoldSponsor.astro";
import Section from "../components/Section.astro";
import { Image } from 'astro:assets';
import AudienceView from '../assets/AudienceView-Logo.png'
import bronzeSponsor from '../assets/bronze-sponsor.png';
import Front from '../components/Front.astro';
---
<Section>
    <div class="sponsorRank-container">
        <div class="gold-sponsor">
            <GoldSponsor />
            <div class="sponsor-container">
                <Image class="sponsor" src={AudienceView} alt="Audience View" />
                <Front class="w-[280px]" />
            </div>
        </div>

        <div class="bronze-sponsor">
            <div class="logo-bronze-container">
                <Image class="logo-bronce-sponsor" src={bronzeSponsor} alt="Bronce Sponsor" />
                <span class="bronze-text">Bronze Sponsor</span>
            </div>
        </div>
    </div>
</Section>

<style>
    .sponsorRank-container {
        width: 1136px;
        height: 600px;
        display: flex;
        flex-direction: column;
        gap: 30px;
    }
    
    .sponsor {
        width: 350px;
    }
    .sponsor-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 80px;
    }
    .gold-sponsor {
        width: 100%;
        height: 300px;
        border: 1px solid #efe060;
        border-radius: 24px;
        background-image: linear-gradient(.07deg,#50481d33 .03%,#0000 95.96%),radial-gradient(95.25% 166.54% at 98.39% 2.85%,#3635269e 8%,#09090700 80%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top: 20px;
    }

    .bronze-sponsor {
        width: 100%;
        height: 300px;
        border: 1px solid #efe060;
        border-radius: 24px;
        background-image: linear-gradient(#0000 4.04%,#361c1333 99.97%),radial-gradient(95.25% 166.54% at 98.39% 2.85%,#361c1333 8%,#0000 80%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top: 20px;
    }
    .logo-bronze-container {
        display: flex;
        align-items: center;
        gap: 20px;
    }
    .bronze-text {
        font-size: 38px;
        font-weight: 500;
    }
    .logo-bronce-sponsor {
        width: 80px;
    }
</style>