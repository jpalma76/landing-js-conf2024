      <!-- 4 -->
      <div class="individual-staff">
        <Image
          class="staff-avatar"
          src={JaimeGutierres}
          alt="Jaime Gutíerrez"
        />
        <h3>Jaime Gutíerrez</h3>
        <ul class="rrss">
          <li>
            <LinkedInIcon class="size-5" />
          </li>
          <li>
            <InstagramIcon class="size-5" />
          </li>
          <li>
            <GitHubIcon class="size-5" />
          </li>
        </ul>
      </div>
      <!-- 5 -->
      <div class="individual-staff">
        <Image class="staff-avatar" src={LuisTenorio} alt="Luís Tenorio" />
        <h3>Luís Tenorio</h3>
        <ul class="rrss">
          <li>
            <LinkedInIcon class="size-5" />
          </li>
          <li>
            <InstagramIcon class="size-5" />
          </li>
          <li>
            <GitHubIcon class="size-5" />
          </li>
        </ul>
      </div>
      <!-- 6 -->
      <div class="individual-staff">
        <Image class="staff-avatar" src={RicardoCuauro} alt="Ricardo Cuauro" />
        <h3>Ricardo Cuauro</h3>
        <ul class="rrss">
          <li>
            <LinkedInIcon class="size-5" />
          </li>
