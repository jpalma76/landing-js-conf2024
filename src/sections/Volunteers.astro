    <div class="staff-wrapper">
      <!-- 1 -->
      <div class="individual-staff">
        <Image
          class="staff-avatar"
          src={SamuelLibrePillco}
          alt="Samuel Libre-Pillco"
        />
        <h3>Samuel Libre-Pillco</h3>
