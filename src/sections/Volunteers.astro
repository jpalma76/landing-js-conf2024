---
import { Image } from "astro:assets";
import Section from "../components/Section.astro";

import MiguelColmenarez from "../assets/volunteers/miguel-colmenarez.webp";
import FelixIcaza from "../assets/staff/ana-rangel.webp";
import FacundoDAndrea from "../assets/volunteers/facundo-dandrea.webp";
import JaimeGutierres from "../assets/volunteers/jaime-gutierrez.webp";
