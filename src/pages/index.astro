---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../sections/Hero.astro';
import Principal from '../sections/Principal.astro';
import Footer from '../components/Footer.astro';
import WhatToSpect from '../sections/WhatToSpect.astro';
---

<Layout 
	title="Landing JS-Conf2024"
	description="Proyecto - landing de la JSConf2024 desarrollada por Juan Palma @jpalma76"
>
	<Header />	
	<main class="w-[100%] box-content md:w-[90%] min-h-screen gap-y-12 flex flex-col">
		<div class="space-top"></div>
		<Hero />
		<Principal />
		<WhatToSpect />
		<Footer />
	</main>
	
</Layout>

<style>
	img {
		border: 1px solid #EDE060;
	}
	.space-top {
        width:100%;
        height: 80px;
    }
</style>