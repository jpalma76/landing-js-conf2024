---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../sections/Hero.astro';
import Principal from '../sections/Principal.astro';
import Footer from '../components/Footer.astro';
import WhatToSpect from '../sections/WhatToSpect.astro';
import Views from '../sections/Views.astro';
import Sponsor from '../sections/Sponsor.astro';
import SponsorRank from '../sections/SponsorRank.astro';
---

<Layout 
	title="Landing JS-Conf2024"
	description="Proyecto - landing de la JSConf2024 desarrollada por Juan Palma @jpalma76"
>
	<Header />	
	<main class="w-[100%] box-content md:w-[90%] min-h-[100vh] gap-y-12 flex flex-col">
		<div class="space-top"></div>
		<Hero />
		<Principal />
		<WhatToSpect />
		<Views />
		<Sponsor />
		<SponsorRank />
		<Footer />
	</main>
</Layout>

<style>
	.space-top {
        width:100%;
        height: 80px;
    }
</style>