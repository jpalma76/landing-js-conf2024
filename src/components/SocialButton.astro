---
interface Props {
    url: string;
}
const {url} = Astro.props;
---
<a
    class="flex items-center gap-x-3 border-2 border-white rounded-xl px-4 py-0.5 hover:scale-110 hover:opacity-90 transition hover:bg-white hover:text-black" 
    href={url}
    rel="noopener noreferrer"
    target="_blank" 
>
    <slot />
</a>